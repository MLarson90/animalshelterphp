<!DOCTYPE html>
<html>
  <head>
    <title>Admin Page</title>
  </head>
  <body>
    <p><a href='/'>Home</a></p>
    <form action="/admin" method="post">
      <label for="name">Animal Name</label>
      <input type="text" name="name">
      <label for="gender">Animal Gender</label>
      <input type="text" name="gender">
      <label for="breed">Animal Breed</label>
      <input type="breed" name="breed">
      <button type="submit">Add animal</button>
    </form>
    {% if kyle is not empty %}
    <div class="row">
      {% for kyles in kyle %}
        <div class="col-lg-4">
          <ul>
            <li>Name: {{ kyles.getName }}</li>
            <li>Breed: {{ kyles.getBreed }}</li>
            <li>Gender: {{ kyles.getGender }}</li>
            <li>When {{ kyles.getName }} came to D.I.E: {{ kyles.getDate }}</li>
          </ul>
        </div>
      {% endfor %}
    </div>
    {% endif %}
    <form action="/delete" method="post">
      <button type="submit">Delete All</button>
    </form>
  </body>
</html>
